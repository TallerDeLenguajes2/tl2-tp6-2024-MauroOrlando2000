@model tl2_tp6_2024_MauroOrlando2000.Models.Producto
@section Scripts{<partial name="_ValidationScriptsPartial"/>}
<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

@{ ViewData["Title"] = "Modificar producto"; }

<h2>@ViewData["Title"]</h2>
<h4>Descripcion: @Model.Descripcion</h4>
<h4>Precio: @Model.Precio</h4>

<form asp-action="ModificarProducto" method="post" autocomplete="off">
    <div class="form-group">
        <label asp-for="Descripcion">Descripcion:</label>
        <input asp-for="Descripcion">
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class ="form-group">
        <label asp-for="Precio">Precio:</label>
        <input asp-for="Precio">
        <span asp-validation-for="Precio" class="text-danger"></span>
    </div>
    <input type="submit" value="Enviar" class="btn btn-primary">
</form>