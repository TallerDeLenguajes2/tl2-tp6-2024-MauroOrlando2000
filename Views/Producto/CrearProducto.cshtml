@model tl2_tp6_2024_MauroOrlando2000.Models.Producto

@{ ViewData["Title"] = "Crear producto nuevo"; }

<h1>@ViewData["Title"]</h1>

<form asp-action="CrearProducto" method="post">
    <div class="form-group">
        <label for="Descripcion">Descripcion:</label>
        <input type="text" id="Descripcion" name="Descripcion" required>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class ="form-group">
        <label for="Precio">Precio:</label>
        <input type="number" for="Precio" name="Precio">
    </div>
    <input type="submit" value="Enviar" class="btn btn-primary">
    <input type="reset" value="Borrar" class="btn btn-primary">
</form>