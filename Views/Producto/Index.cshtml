@model IEnumerable<tl2_tp6_2024_MauroOrlando2000.Models.Producto>

@{ ViewData["Title"] = "Listado de productos"; }

<h1>@ViewData["Title"]</h1>
<a asp-action="CrearProducto" asp-controller="Producto" class="btn btn-primary mb-3">Crear Producto</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th><th>Nombre</th><th>Precio</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(Producto product in Model)
            {
                <tr>
                    <td>@product.IdProducto</td><td>@product.Descripcion</td><td>@product.Precio.ToString("c")</td>
                    <td><a class="btn btn-primary" asp-action="ModificarProducto" asp-controller="Producto" asp-route-id="@product.IdProducto">Modificar</a></td>
                    <td><form asp-action="EliminarProducto" asp-controller="Producto" asp-route-id="@product.IdProducto" metohd="post">
                        <input type="submit" class="btn btn-danger" value="Eliminar" onclick="return confirm('Â¿Desea eliminar @product.Descripcion de la lista?');">
                    </form></td>
                </tr>
            }
        }
    </tbody>
</table>