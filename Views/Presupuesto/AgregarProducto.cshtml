@model tl2_tp6_2024_MauroOrlando2000.Models.AgregarProductoViewModel

@{ ViewData["Title"] = "Agregar producto"; }

<h2>@ViewData["Title"]</h2>
<form asp-action="AgregarProducto" method="post">
    <input type="hidden" asp-for="IdPresupuesto" value="@Model.IdPresupuesto">
    <div class="form-group">
        <label asp-for="IdProducto">Ingrese el ID del producto:</label>
        <select asp-for="IdProducto" class="form-control" asp-items="Model.ListadoProductos" style="margin-bottom: 1em;" required>
            <option value="" disabled selected hidden>-- Seleccione una opcion --</option>
        </select>
    </div>
    <div class ="form-group">
        <label asp-for="Cantidad">Cuantos quiere?:</label>
        <input type="number" asp-for="Cantidad" required>
    </div>
    <input type="submit" value="Enviar" class="btn btn-primary">
    <input type="reset" value="Borrar" class="btn btn-danger">
</form>