@model tl2_tp6_2024_MauroOrlando2000.Models.Cliente

@{ ViewData["Title"] = "Crear un nuevo cliente"; }

<h1>@ViewData["Title"]</h1>

<form asp-action="CrearCliente" method="post">
    <div class="form-group">
        <label asp-for="Nombre">Nombre del cliente:</label>
        <input type="text" asp-for="Nombre" id="NombreCliente" required>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email">Email:</label>
        <input type="email" asp-for="Email" id="Email" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefono">Telefono:</label>
        <input type="text" asp-for="Telefono" id="Telefono">
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>
    <input type="submit" value="Enviar" class="btn btn-primary">
    <input type="reset" value="Borrar" class="btn btn-danger">
</form>